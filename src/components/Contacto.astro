<section id="contacto" class="py-20">
    <h2 class="text-3xl font-bold mb-6 text-center">Contacto</h2>
    <form action="https://formspree.io/f/{tu-id}" method="POST" class="max-w-xl mx-auto space-y-4">
      <input type="text" name="name" placeholder="Tu nombre" class="w-full p-2 border rounded" required />
      <input type="email" name="email" placeholder="Tu email" class="w-full p-2 border rounded" required />
      <textarea name="message" rows="4" placeholder="Tu mensaje" class="w-full p-2 border rounded" required></textarea>
      <button type="submit" class="w-full bg-black text-white py-2 rounded">Enviar</button>
    </form>
  </section>
