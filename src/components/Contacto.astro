<section id="contacto" class="bg-gray-950 text-white py-20 px-6 md:px-16">
  <div class="max-w-6xl mx-auto flex flex-col-reverse md:flex-row items-center justify-between gap-12">
    
    <!-- Formulario -->
    <div class="w-full md:w-1/2" data-aos="zoom-in" data-aos-duration="3000">
      <h2 class="text-3xl md:text-4xl font-bold text-cyan-500 mb-8 text-center md:text-left">
        ¡Creemos algo increíble juntos!
      </h2>
      <form action="https://formspree.io/f/{tu-id}" method="POST" class="space-y-4">
