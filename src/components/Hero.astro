<!-- Animación JS -->
<script>
  const texts = ["Diseño web.", "Desarrollo full stack.", "Automatización inteligente.", "Pasión por el código."];
  let count = 0; //indice del arreglo texts
  let index = 0;  //numero de letras que se van mostrando
  let currentText = ''; //almacena el texto actual que se está mostrando
  let letter = ''; //contiene la letra actual que se está mostrando

  //función autoejecutable para iniciar la animación
  (function type() {
    if (count === texts.length) count = 0;
    currentText = texts[count];
    letter = currentText.slice(0, ++index);
    document.getElementById('typing').textContent = letter;
    if (letter.length === currentText.length) {
      setTimeout(() => {
        index = 0;
        count++;
        type();
      }, 2000);
    } else {
      setTimeout(type, 100);
    }
  })();
</script>
